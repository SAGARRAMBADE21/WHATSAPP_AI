# ==========================================
# OpenAI Configuration
# ==========================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4-turbo, gpt-3.5-turbo

# ==========================================
# Google OAuth Configuration
# ==========================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback
GOOGLE_TOKEN_PATH=./auth/google_tokens.json

# ==========================================
# WhatsApp Configuration
# ==========================================
ALLOWED_NUMBERS=1234567890,0987654321  # Comma-separated list of allowed phone numbers (optional)
OWNER_NUMBER=1234567890  # Your main WhatsApp number
AUTH_STATE_PATH=./auth/baileys_auth

# ==========================================
# Memory & Storage
# ==========================================
MEMORY_DB_PATH=./data/memory/navigator.db

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=info  # Options: trace, debug, info, warn, error, fatal
